pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Hatred13th/Devops_proj.git'
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                dir('frontend') {
                    bat 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    bat 'npm run build'
                }
            }
        }

        stage('Run Frontend Tests') {
            steps {
                dir('frontend') {
                    bat 'npm test -- --watchAll=false || exit 0'
                }
            }
        }
    }

    post {
        success {
            echo "Frontend CI pipeline completed successfully!"
        }
        failure {
            echo "Frontend CI pipeline failed! Check logs."
        }
    }
}
