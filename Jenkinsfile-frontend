pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Hatred13th/Devops_proj.git'
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build'
                }
            }
        }

        stage('Run Frontend Tests') {
            steps {
                dir('frontend') {
                    sh 'npm test -- --watchAll=false || true'
                }
            }
        }
    }

    post {
        success {
            echo "Frontend CI pipeline completed successfully!"
        }
        failure {
            echo "Frontend CI pipeline failed! Check logs."
        }
    }
}
