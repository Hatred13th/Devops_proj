pipeline {
    agent any

    environment {
        APP_IMAGE = "devops_proj_app"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Hatred13th/Devops_proj.git'
            }
        }

        stage('Backend - Install & Test') {
            steps {
                dir('backend') {
                    bat 'npm install'
                    bat 'npm test -- --watchAll=false || exit 0'
                }
            }
        }

        stage('Frontend - Install & Build') {
            steps {
                dir('frontend') {
                    bat 'npm install'
                    bat 'npm run build'
                }
            }
        }

        stage('Docker Build') {
            steps {
                bat 'docker build -t %APP_IMAGE% .'
            }
        }

        stage('Docker Deploy') {
            steps {
                // Windows does not support '|| true', use PowerShell-safe logic
                bat 'docker stop devops_app || exit 0'
                bat 'docker rm devops_app || exit 0'
                bat 'docker run -d --name devops_app -p 3000:3000 %APP_IMAGE%'
            }
        }
    }

    post {
        success {
            echo "Full CI/CD pipeline finished successfully!"
        }
        failure {
            echo "Full pipeline failed! Check logs."
        }
    }
}
