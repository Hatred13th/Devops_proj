pipeline {
    agent any

    environment {
        APP_IMAGE = "devops_proj_app"
    }

    stages {

        stage('Checkout') {
            steps {
                 git branch: 'main', url: 'https://github.com/Hatred13th/Devops_proj.git'
            }
        }

        stage('Backend - Install & Test') {
            steps {
                dir('backend') {
                    sh 'npm install'
                    sh 'npm test -- --watchAll=false || true'
                }
            }
        }

        stage('Frontend - Install & Build') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $APP_IMAGE .'
            }
        }

        stage('Docker Deploy') {
            steps {
                sh 'docker stop devops_app || true'
                sh 'docker rm devops_app || true'
                sh 'docker run -d --name devops_app -p 3000:3000 $APP_IMAGE'
            }
        }
    }

    post {
        success {
            echo "Full CI/CD pipeline finished successfully!"
        }
        failure {
            echo "Full pipeline failed! Check logs."
        }
    }
}
